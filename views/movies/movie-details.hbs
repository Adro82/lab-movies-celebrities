<h1 class="text-center">MOVIES</h1>

<div class="container">

    <div class="row justify-content-center">


        <div class="col-7 card drones-card">
            <div class="card-body">

                <h5 class="title"><b>Title:</b> {{title}}</h5>
                <p class="genre"><b>Genre:</b> {{genre}}</p>
                <p class="plot"><b>Plot:</b> {{plot}}</p>

                {{#each cast}}

                <p class="cast"><b>Cast:</b></p>
                <p><b>Name:</b> {{name}} </p>
                <p><b>Occupation:</b> {{occupation}}</p>
                <p><b>Carch Phrase:</b> {{catchPhrase}}</p>

                {{/each}}

                <div class="col-12 p-2 mb-2 text-center">

                    <form action="/movies/{{_id}}/delete" method="POST">
                        <input type="submit" value="delete" class="btn btn-danger">
                    </form>

                    <a class=" mt-2 editMovie btn btn-warning justify-content-center" href="/movies/{{_id}}/edit">Edit
                        Movie</a>

                </div>

            </div>
        </div>
        <a class="col-7 btn btn-light border-dark mt-1 text-center" href="/movies/movies">Back To Movies</a>
    </div>

</div>