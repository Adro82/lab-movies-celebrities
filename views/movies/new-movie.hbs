<h2 class='text-center'>CREATE MOVIES</h2>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title"></input>
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre"></input>
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot"></input>
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select class="form-select" name="cast" multiple id="cast">
                        {{#each celebrities}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark btn-lg text-center">Create Movie</button>

            </form>

        </div>

    </div>

</div>