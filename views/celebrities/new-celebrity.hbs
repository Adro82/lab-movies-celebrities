<h2 class="text-center mt-4">CREATE CELEBRITIES</h2>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/celebrities/create" method="POST">


                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name"></input>
                </div>

                <div class="mb-3">
                    <label for="occupation" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation"></input>
                </div>

                <div class="mb-3">
                    <label for="catchPhrase" class="form-label">Catch Phrase</label>
                    <input type="text" class="form-control" id="catchPhrase" name="catchPhrase"></input>
                </div>
                <div class="mb-3 col-12 text-center">
                    <button type="submit" class="btn btn-dark btn-lg text-center">Create Celebrity</button>
                </div>

            </form>

        </div>

    </div>

</div>